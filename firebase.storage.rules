rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public previews: read allowed on /previews/**
    match /previews/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Full tracks: only via signed URLs or verified claims (implement server-side)
    match /full/{allPaths=**} {
      allow read: if false; // block by default
      allow write: if request.auth != null;
    }
  }
}